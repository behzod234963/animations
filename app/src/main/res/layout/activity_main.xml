<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivImage_main"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/pic_car"
                android:scaleType="centerCrop"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_loop="true"
            app:lottie_fileName="loading.json"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center|top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/btnZoom_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:layout_weight="1"
                    android:text="ZOOM"
                    android:background="@drawable/bg_btn"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btnRotate_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn"
                    android:text="ROTATE"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btnFade_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn"
                    android:text="FADE"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/btnBlink_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_btn"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:text="BLINK"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btnMove_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_btn"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="MOVE"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btnSlide_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:layout_weight="1"
                    android:text="SLIDE"
                    android:background="@drawable/bg_btn"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnPlay"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:backgroundTint="@null"
                android:layout_weight="1"
                android:text="play"
                android:background="@drawable/bg_btn"
                android:layout_marginHorizontal="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btnPause"
                android:layout_width="70dp"
                android:layout_height="60dp"
                app:backgroundTint="@null"
                android:layout_weight="1"
                android:text="pause"
                android:background="@drawable/bg_btn"
                android:layout_marginHorizontal="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>